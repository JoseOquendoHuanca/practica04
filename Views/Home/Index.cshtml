@model List<usuario>
@{
    ViewData["Title"] = "Home Page";
}


@if (Model.Count() == 0)
{
    <p class="text-center"> NO CONTAMOS CON IMAGENES DISPONIBLES..... </p>
}
else
{
    <div class="row">
        @foreach (var usuario in Model)
        {
            <div class="col-4 ">
  <img  src="@usuario.foto" class="img-fluid"  /> 
                 <p><strong> Titulo : </strong> @usuario.nombre
                 <p><strong>Subido por : </strong> @usuario.nombreusuario
                 <p><strong>comentarios : </strong> @usuario.descripcion
              

                @* <a href="/Home/Privacy/@usuario.id"  class="btnDetalle btn btn-success text-white">Detalle</a> *@
            </div>


        }
    </div>
}
